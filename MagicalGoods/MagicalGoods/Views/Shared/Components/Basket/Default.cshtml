@model IEnumerable<MagicalGoods.Models.CartProduct>
@{
    decimal total = 0m;
}
<head>
    @*<link href="~/BasketOverlay.css" rel="stylesheet" />*@
</head>
<div class="col-md-4">
    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#basket" aria-expanded="true">Hide Cart</button>

    <section class="collapse show" id="basket">
        @foreach (var cartProduct in Model)
        {
            total += cartProduct.Product.Price * cartProduct.Quantity;
            <h5>@cartProduct.Product.Name</h5>
            <p>@(cartProduct.Product.Price * cartProduct.Quantity)</p>
        }


        <p>Total Price: @total Galleons</p>
        <a class="btn btn-success" asp-page="/Cart/Index">View your cart</a>
        
    </section>

</div>